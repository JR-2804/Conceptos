            </a>
        </div> #}
        <div class="d-flex mt-2">
            <span class="bottom-text">Crear un perfil en el sitio</span>
        </div>
        {{ render(controller('AppBundle:Security:register')) }}
    </div>
    <div class="ac-custom ac-checkmark register-checkbox">
        <ul>
            <li>
                <input type="checkbox" name="register">
                <label class="mb-0">Registrarme</label>
            </li>
        </ul>
    </div>
</div>
