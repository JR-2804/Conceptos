{% trans_default_domain 'FOSUserBundle' %}

<div class="d-flex flex-column ml-3 mr-3">
    <div id ="login-form">
        <form class="container pl-0 pr-0" role="form" method="POST" action="{{ path('fos_user_security_check') }}">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            {% endif %}
            {# <div class="d-flex mb-2">
                <span class="bottom-text">Acceder con mis redes sociales</span>
