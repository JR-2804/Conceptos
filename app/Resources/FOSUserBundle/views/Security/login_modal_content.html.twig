{% trans_default_domain 'FOSUserBundle' %}

<div id ="login-form">
  <span id="login-info" class="conceptos-subtitle"></span>
  <form class="d-flex flex-column w-100" role="form" method="POST" action="{{ path('fos_user_security_check') }}">
    {% if csrf_token %}
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}
    <span class="conceptos-subtitle mt-2 required pl-2">USUARIO</span>
    <input type="text" name="_username" id="username" required autofocus>
    <span class="conceptos-subtitle mt-2 required pl-2">CONTRASEÑA</span>
    <input type="password" name="_password" id="password" required>
    <div class="row" style="display: flex; justify-content: space-around;">
      <button type="submit" class="conceptos-primary-button align-self-start mt-2">ACCEDER</button>
      <a href="{{ path('fos_user_resetting_request') }}" class="conceptos-primary-button align-self-start mt-2 pl-1 pr-1">OLVIDE LA CONTRASEÑA</a>
    </div>

  </form>
</div>
<div id="register-form" style="display: none;">
  {{ render(controller('AppBundle:Security:register')) }}
</div>
<div class="d-flex mt-2">
  <label class="d-flex checkbox-container align-self-start">
    <span class="conceptos-subtitle">Registrarme</span>
    <input type="checkbox" class="register-checkbox">
    <span class="checkmark checkmark-gray"></span>
  </label>
</div>
