            <div class="d-flex mt-2">
                <span class="bottom-text">Acceder al sitio</span>
            </div>
            <div class="col-12 pl-0 mb-2">
                <div class="form-group">
                    <input type="text" name="_username" class="form-control" id="username" placeholder="Usuario" required autofocus>
                </div>
            </div>
            <div class="col-12 pl-0 mb-0">
                <div class="form-group">
                    <input type="password" name="_password" class="form-control" id="password" placeholder="Password" required>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <button href="" type="submit" class="btn btn-success btn-form mb-3 mr-0">
                    <span>></span>
                </button>
            </div>
        </form>
    </div>
    <div id="register-form" class="collapse">
        {# <div class="d-flex mb-2">
