{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('site_register')}) }}
  <div class="d-flex flex-column">
    <span class="conceptos-subtitle required pl-2">USUARIO</span>
    {{ form_errors(form.username) }}
    {{ form_widget(form.username) }}
  </div>
  <div class="d-flex flex-column mt-2">
    <span class="conceptos-subtitle pl-2 required">CORREO</span>
    {{ form_errors(form.email) }}
    {{ form_widget(form.email) }}
  </div>
  <div class="d-flex flex-column mt-2">
    <span class="conceptos-subtitle pl-2 required">CONTRASEÑA</span>
    {{ form_errors(form.plainPassword) }}
    {{ form_widget(form.plainPassword) }}
  </div>
  <div class="d-flex flex-column mt-2">
    <span class="conceptos-subtitle pl-2required ">NOMBRE</span>
    {{ form_errors(form.first_name) }}
    {{ form_widget(form.first_name) }}
  </div>
  <div class="d-flex flex-column mt-2">
    <span class="conceptos-subtitle pl-2">APELLIDOS</span>
    {{ form_errors(form.last_name) }}
    {{ form_widget(form.last_name) }}
  </div>
  <div class="d-flex flex-column mt-2">
    <span class="conceptos-subtitle pl-2">TELÉFONO DE CASA</span>
    {{ form_errors(form.mobile_number) }}
    {{ form_widget(form.mobile_number) }}
  </div>
  <div class="d-flex flex-column mt-2">
    <span class="conceptos-subtitle pl-2">TELÉFONO MOVIL</span>
    {{ form_errors(form.home_number) }}
    {{ form_widget(form.home_number) }}
  </div>
  <div class="d-flex flex-column mt-2">
    <span class="conceptos-subtitle pl-2">DIRECCIÓN</span>
    {{ form_errors(form.address) }}
    {{ form_widget(form.address) }}
  </div>
  <div class="d-flex flex-column mt-2">
    <span class="conceptos-subtitle pl-2 required">FECHA DE NACIMIENTO</span>
    {{ form_errors(form.birth_date) }}
    {{ form_widget(form.birth_date) }}
  </div>
  <button type="submit" class="conceptos-primary-button align-self-start mt-2">REGISTRARSE</button>
{{ form_end(form) }}
