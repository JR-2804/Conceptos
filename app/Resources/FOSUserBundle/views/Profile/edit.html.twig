{% extends 'FOSUserBundle::layout.html.twig' %}

{% block title %}Perfil{% endblock %}
{% block css %}
    <link href="{{ asset('bundles/conceptos/libs/dropzone/dropzone.css') }}" type="text/css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('bundles/conceptos/14ndy15/styles/profile.css') }}" type="text/css">
{% endblock %}
{% block fos_user_content %}
    {{ include('FOSUserBundle:Profile:edit_content.html.twig') }}
{% endblock fos_user_content %}
{% block contact %}
  {{ render(controller('AppBundle:Site:handleEmailNotification')) }}
{% endblock %}
{% block js %}
    <script src="{{ asset('bundles/conceptos/libs/dropzone/dropzone.js') }}"></script>
    <script src="{{ asset('bundles/conceptos/scripts/js/edit-profile.js') }}"></script>
    <script>
      {% if showSuccessToast is defined and showSuccessToast == true %}
        $.toast({
          text: 'Perfil edidado correctamente',
          showHideTransition: "fade",
          bgColor: "#c2b930",
          textColor: "#3f3c03",
          allowToastClose: true,
          hideAfter: 3000,
          stack: 5,
          textAlign: "center",
          position: "mid-center",
          icon: "success",
          heading: "Correcto"
        });
      {% endif %}
    </script>
{% endblock %}
