<div class="container-fluid h-100 membership-form">
    <div class="row h-100">
        <div class="col-12 pl-0 h-100">
            <div class="d-flex align-items-end h-100">
                <div class="d-flex flex-column w-100">
                    <div class="d-flex membership-badge align-self-start">
                        <span class="main-text ml-3 ml-lg-5">{{page.data.header.mainText|raw}}</span>
                    </div>
                    <div class="d-flex">
                        <span class="bottom-text ml-3 ml-lg-5">{{page.data.header.bottomText|raw}}</span>
                    </div>
                    <div class="d-flex ml-3 ml-lg-5 mr-3">
                        {{ form_start(form, {'attr': {'class': 'mbr-form col-12 col-lg-2 pl-0', 'action': path('request_membership')}}) }}
                            <div class="col-12 pl-0">
                                <div class="form-group">
                                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control membership-field', 'placeholder': 'Nombre'}}) }}
                                </div>
                            </div>
                            <div class="col-12 pl-0">
                                <div class="form-group">
                                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control membership-field', 'placeholder': 'Apellidos'}}) }}
                                </div>
                            </div>
                            <div class="col-12 pl-0">
                                <div class="form-group">
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control membership-field', 'placeholder': 'Correo'}}) }}
                                </div>
                            </div>
                            <div class="col-12 pl-0">
                                <div class="form-group">
                                    {{ form_widget(form.phone, {'attr': {'class': 'form-control membership-field', 'placeholder': 'Tel√©fono'}}) }}
                                </div>
                            </div>
                            <div class="d-flex">
                                <button href="" type="submit" class="btn btn-success btn-form membership-field w-100 mb-3 mb-5-lg" id="request-membership-button">
                                    Solicitar
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
