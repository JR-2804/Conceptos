{% extends ':site:base.html.twig' %}
{% block title %}Inicio{% endblock %}
{% block css %}
    <link rel="stylesheet" href="{{ asset('bundles/conceptos/home/css/home.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/conceptos/14ndy15/styles/index.css') }}" type="text/css">
{% endblock %}

{% block body %}
  <div id="home-header" class="d-flex justify-content-center home__hero align-items-start">
    {% if page.data.slides and page.data.slides is not empty %}
      <img class="conceptos-image" src="{{page.data.slides[0].path}}">
    {% endif %}

      <div class="home__hero__content">
          {% set offer = offers | last %}
          {% if offer %}
              <div class="home__hero__content__title">
                  {% if offer.name %}
                    <h1>{{ offer.name }}</h1>
                  {% endif %}
                  {% if offer.description %}
                    <h2>{{ offer.description }}</h2>
                  {% endif %}
              </div>
              <div class="home__hero__content__btn">
                  <a href="{{path('products', {inOffer:true})}}">VER OFERTAS</a>
              </div>
          {% elseif page.data.slides and page.data.slides is not empty %}
            {% set slide = page.data.slides[0] %}
            {% if slide.main %}
              <h1>{{ slide.main }}</h1>
            {% endif %}
            {% if slide.secondary %}
              <h2>{{ slide.secondary }}</h2>
            {% endif %}
          {% else %}
              <div class="home__hero__content__title">
                  <h1>Bienvenidos a Conceptos 2020</h1>
              </div>
          {% endif %}
      </div>

      <div class="membership_card membership_card--no-display">
          <div class="membership_card__close"></div>
          <a href="{{ path('membership') }}">
              <div class="membership_card__content">
                <h2>Ahorre</h2>
                <h3>Hasta un 20%</h3>
                <h4>con nuestra membresía</h4>
              </div>
          </a>
      </div>
  </div>

  {% if popularChunks is not empty %}
    <div class="d-flex d-lg-none flex-column p-3">
      <span class="pl-2 conceptos-title">{{page.data.populars.title|raw}}</span>
      <span class="pl-2 conceptos-subtitle-2">{{page.data.populars.subtitle|raw}}</span>
      <div class="d-flex flex-wrap mt-3">
        <div class="carousel" data-ride="carousel" id="carousel-populars-short" data-interval="10000">
          <ol class="carousel-indicators">
            {% for chunk in popularChunks %}
                <li data-app-prevent-settings="" data-target="#slider1-28"
                    class="{% if loop.first %}active{% endif %}"
                    data-slide-to="{{ loop.index }}"></li>
            {% endfor %}
          </ol>
          <div class="carousel-inner">
              {% for chunk in popularChunks %}
                <div class="container-fluid carousel-item p-0 mb-2 {% if loop.first %}active{% endif %}">
                  <div class="d-flex flex-wrap">
                      {% for popular in chunk %}
                        {% set priceOffer = -1 %}
                        {% set offerId = 'false' %}
                        {% set onlyForMembers = false %}
                        {% for offer in popular.offers %}
                          {% if offer.startDate <= currentDate and offer.endDate >= currentDate %}
                            {% set priceOffer = offer.price %}
                            {% set offerId = offer.id %}
                            {% if offer.onlyForMembers %}
                              {% set onlyForMembers = true %}
                            {% endif %}
                          {% endif %}
                        {% endfor %}
                        {% if priceOffer == -1 %}
                          {% for category in popular.categories %}
                            {% if (category.offers[0] is defined) and ((not category.offers[0].onlyInStoreProducts) or (category.offers[0].onlyInStoreProducts and popular.inStore)) %}
                              {% set priceOffer = (popular.price * (1 - category.offers[0].price / 100))|round(0, 'ceil') %}
                            {% else %}
                              {% for parentCategory in category.parents %}
                                {% if (parentCategory.offers[0] is defined) and ((not parentCategory.offers[0].onlyInStoreProducts) or (parentCategory.offers[0].onlyInStoreProducts and popular.inStore)) %}
                                  {% set priceOffer = (popular.price * (1 - parentCategory.offers[0].price / 100))|round(0, 'ceil') %}
                                {% endif %}
                              {% endfor %}
                            {% endif %}
                          {% endfor %}
                        {% endif %}
                        <div class="d-flex col-6 justify-content-center p-2 {% if priceOffer != -1 %}popular_product{% endif %}">
                          <div class="d-flex align-items-center conceptos-white-background p-2">
                            <a class="h-100" href="{{ path('product_details', {id: popular.id, name: popular.name}) }}">
                              <div class="d-flex flex-column justify-content-between h-100">
                                <img class="conceptos-image conceptos-popular-product-image" src="{{ vich_uploader_asset(popular.mainImage, 'imageFile') }}">
                                <div class="d-flex justify-content-between align-items-center">
                                  {% if priceOffer != -1 %}
                                    <span class="conceptos-product-info conceptos-product-price mt-1">$&nbsp;{{priceOffer}}</span>
                                  {% else %}
                                    <span class="conceptos-product-info conceptos-product-price mt-1">$&nbsp;{{popular.price}}</span>
                                  {% endif %}
                                  <button class="conceptos-add-to-cart-icon pr-0" data-path="{{ path('add_shop_card', {id: popular.id}) }}">
                                    <img src="{{ asset('bundles/conceptos/images/home/cart.png') }}">
                                  </button>
                                </div>
                              </div>
                            </a>
                          </div>
                        </div>
                      {% endfor %}
                  </div>
                </div>
              {% endfor %}
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-center mt-3">
        <a class="conceptos-primary-button-gray" href="{{ path('products', {populars: true, page: 1}) }}">
          <span class="pl-2 pr-2 w-100">VER MÁS</span>
        </a>
      </div>
    </div>
  {% endif %}

  {% if popularChunksDesktop is not empty %}
    <div class="d-none d-lg-flex flex-column p-3 ml-5 mr-5">
      <span class="pl-2 conceptos-title">{{page.data.populars.title|raw}}</span>
      <span class="pl-2 conceptos-subtitle">{{page.data.populars.subtitle|raw}}</span>
      <div class="d-flex flex-wrap mt-3 mb-3">
        <div class="carousel pb-3" data-ride="carousel" id="carousel-populars-short" data-interval="10000">
          <ol class="carousel-indicators carousel-indicators">
            {% for chunk in popularChunksDesktop %}
                <li data-app-prevent-settings="" data-target="#slider1-28"
                    class="{% if loop.first %}active{% endif %}"
                    data-slide-to="{{ loop.index }}"></li>
            {% endfor %}
          </ol>
          <div class="carousel-inner">
              {% for chunk in popularChunksDesktop %}
                <div class="container-fluid carousel-item p-0 mb-2 {% if loop.first %}active{% endif %}">
                  <div class="d-flex flex-wrap">
                      {% for popular in chunk %}
                        {% set priceOffer = -1 %}
                        {% set offerId = 'false' %}
                        {% set onlyForMembers = false %}
                        {% for offer in popular.offers %}
                          {% if offer.startDate <= currentDate and offer.endDate >= currentDate %}
                            {% set priceOffer = offer.price %}
                            {% set offerId = offer.id %}
                            {% if offer.onlyForMembers %}
                              {% set onlyForMembers = true %}
                            {% endif %}
                          {% endif %}
                        {% endfor %}
                        {% if priceOffer == -1 %}
                          {% for category in popular.categories %}
                            {% if (category.offers[0] is defined) and ((not category.offers[0].onlyInStoreProducts) or (category.offers[0].onlyInStoreProducts and popular.inStore)) %}
                              {% set priceOffer = (popular.price * (1 - category.offers[0].price / 100))|round(0, 'ceil') %}
                            {% else %}
                              {% for parentCategory in category.parents %}
                                {% if (parentCategory.offers[0] is defined) and ((not parentCategory.offers[0].onlyInStoreProducts) or (parentCategory.offers[0].onlyInStoreProducts and popular.inStore)) %}
                                  {% set priceOffer = (popular.price * (1 - parentCategory.offers[0].price / 100))|round(0, 'ceil') %}
                                {% endif %}
                              {% endfor %}
                            {% endif %}
                          {% endfor %}
                        {% endif %}

                        <div class="d-flex col-3 justify-content-center p-3 {% if priceOffer != -1 %}popular_product{% endif %}">
                          <div class="d-flex align-items-center conceptos-white-background p-2">
                            <a class="h-100" href="{{ path('product_details', {id: popular.id, name: popular.name}) }}">
                              <div class="d-flex flex-column justify-content-between h-100">
                                <img class="conceptos-image conceptos-popular-product-image" src="{{ vich_uploader_asset(popular.mainImage, 'imageFile') }}">
                                <div class="d-flex justify-content-between align-items-center">
                                  {% if priceOffer != -1 %}
                                    <span class="conceptos-product-info conceptos-product-price mt-1">$&nbsp;{{priceOffer}} </span>
                                  {% else %}
                                    <span class="conceptos-product-info conceptos-product-price mt-1">$&nbsp;{{popular.price}} </span>
                                  {% endif %}
                                  <button class="conceptos-add-to-cart-icon pr-0" data-path="{{ path('add_shop_card', {id: popular.id}) }}">
                                    <img src="{{ asset('bundles/conceptos/images/home/cart.png') }}">
                                  </button>
                                </div>
                              </div>
                            </a>
                          </div>
                        </div>
                      {% endfor %}
                  </div>
                </div>
              {% endfor %}
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-center mt-3">
        <a class="conceptos-primary-button-gray" href="{{ path('products', {populars: true, page: 1}) }}">
          <span class="pl-2 pr-2 w-100">VER MÁS</span>
        </a>
      </div>
    </div>
  {% endif %}

  <div class="d-flex flex-column">
    <div class="d-flex conceptos-badge p-2">
      <div class="d-flex flex-column justify-content-center m-2">
        <span class="conceptos-badge-text">ALMACÉN</span>
        <span class="conceptos-badge-subtitle">{{page.data.subtitles.inStore|raw}}</span>
      </div>
    </div>
    <div class="d-flex flex-column align-items-center m-3 ml-lg-5 mr-lg-5 mt-lg-3 mb-lg-3">
      {% if inStore and inStore is not empty %}
        <div class="d-flex d-lg-none align-items-center conceptos-white-background p-2">
          <div class="carousel" data-ride="carousel" id="carousel-in-store" data-interval="5000">
            <div class="carousel-inner">
              {% for product in inStore %}
                <div class="container-fluid carousel-item p-0 mb-2 {% if loop.first %}active{% endif %}">
                  {% set priceOffer = -1 %}
                  {% set offerId = 'false' %}
                  {% set onlyForMembers = false %}
                  {% for offer in product.offers %}
                    {% if offer.startDate <= currentDate and offer.endDate >= currentDate %}
                      {% set priceOffer = offer.price %}
                      {% set offerId = offer.id %}
                      {% if offer.onlyForMembers %}
                        {% set onlyForMembers = true %}
                      {% endif %}
                    {% endif %}
                  {% endfor %}
                  {% if priceOffer == -1 %}
                    {% for category in product.categories %}
                      {% if (category.offers[0] is defined) and ((not category.offers[0].onlyInStoreProducts) or (category.offers[0].onlyInStoreProducts and product.inStore)) %}
                        {% set priceOffer = (product.price * (1 - category.offers[0].price / 100))|round(0, 'ceil') %}
                      {% else %}
                        {% for parentCategory in category.parents %}
                          {% if (parentCategory.offers[0] is defined) and ((not parentCategory.offers[0].onlyInStoreProducts) or (parentCategory.offers[0].onlyInStoreProducts and product.inStore)) %}
                            {% set priceOffer = (product.price * (1 - parentCategory.offers[0].price / 100))|round(0, 'ceil') %}
                          {% endif %}
                        {% endfor %}
                      {% endif %}
                    {% endfor %}
                  {% endif %}
                  <a href="{{ path('product_details', {id: product.id, name: product.name}) }}">
                    <img class="conceptos-image conceptos-in-store-image" src="{{ vich_uploader_asset(product.mainImage, 'imageFile') }}">
                    <div class="d-flex justify-content-between align-items-center">
                      {% if priceOffer != -1 %}
                        <span class="conceptos-product-info conceptos-product-price-big mt-1">$&nbsp;{{priceOffer}}</span>
                      {% else %}
                        <span class="conceptos-product-info conceptos-product-price-big mt-1">$&nbsp;{{product.price}}</span>
                      {% endif %}
                      <button class="conceptos-add-to-cart-icon conceptos-add-to-cart-icon-big pr-0" data-path="{{ path('add_shop_card', {id: product.id}) }}">
                        <img src="{{ asset('bundles/conceptos/images/home/cart.png') }}">
                      </button>
                    </div>
                  </a>
                </div>
              {% endfor %}
            </div>
            <div class="d-flex">
              <a class="carousel-control carousel-control-prev" role="button" data-slide="prev" href="#carousel-in-store">
                <span aria-hidden="true" class="mbri-left mbr-iconfont"></span>
              </a>
              <a class="carousel-control carousel-control-next" role="button" data-slide="next" href="#carousel-in-store">
                <span aria-hidden="true" class="mbri-right mbr-iconfont"></span>
              </a>
            </div>
          </div>
        </div>
        <div class="d-none d-lg-flex col-12 justify-content-center align-items-center p-2">
          <div class="d-flex carousel w-100" data-ride="carousel" id="carousel-in-store-desktop" data-interval="5000">
            <div class="d-flex carousel-inner w-100">
              {% for chunk in inStoreDesktop %}
                <div class="carousel-item p-0 mb-2 {% if loop.first %}active{% endif %}">
                  <div class="d-flex flex-wrap w-100">
                    {% for product in chunk %}
                      {% set priceOffer = -1 %}
                      {% set offerId = 'false' %}
                      {% set onlyForMembers = false %}
                      {% for offer in product.offers %}
                        {% if offer.startDate <= currentDate and offer.endDate >= currentDate %}
                          {% set priceOffer = offer.price %}
                          {% set offerId = offer.id %}
                          {% if offer.onlyForMembers %}
                            {% set onlyForMembers = true %}
                          {% endif %}
                        {% endif %}
                      {% endfor %}
                      {% if priceOffer == -1 %}
                        {% for category in product.categories %}
                          {% if (category.offers[0] is defined) and ((not category.offers[0].onlyInStoreProducts) or (category.offers[0].onlyInStoreProducts and product.inStore)) %}
                            {% set priceOffer = (product.price * (1 - category.offers[0].price / 100))|round(0, 'ceil') %}
                          {% else %}
                            {% for parentCategory in category.parents %}
                              {% if (parentCategory.offers[0] is defined) and ((not parentCategory.offers[0].onlyInStoreProducts) or (parentCategory.offers[0].onlyInStoreProducts and product.inStore)) %}
                                {% set priceOffer = (product.price * (1 - parentCategory.offers[0].price / 100))|round(0, 'ceil') %}
                              {% endif %}
                            {% endfor %}
                          {% endif %}
                        {% endfor %}
                      {% endif %}
                      <a class="d-flex flex-column align-items-center col-3 pl-0" href="{{ path('product_details', {id: product.id, name: product.name}) }}">
                        <img class="conceptos-image conceptos-in-store-image" src="{{ vich_uploader_asset(product.mainImage, 'imageFile') }}">
                        <div class="d-flex justify-content-between align-items-center conceptos-white-background p-2" style="width: 300px;">
                          {% if priceOffer != -1 %}
                            <span class="conceptos-product-info conceptos-product-price-big mt-1">$&nbsp;{{priceOffer}}</span>
                          {% else %}
                            <span class="conceptos-product-info conceptos-product-price-big mt-1">$&nbsp;{{product.price}}</span>
                          {% endif %}
                          <button class="conceptos-add-to-cart-icon conceptos-add-to-cart-icon-big pr-0" data-path="{{ path('add_shop_card', {id: product.id}) }}">
                            <img src="{{ asset('bundles/conceptos/images/home/cart.png') }}">
                          </button>
                        </div>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              {% endfor %}
            </div>
            <div class="d-flex">
              <a class="carousel-control carousel-control-prev" role="button" data-slide="prev" href="#carousel-in-store-desktop">
                <span aria-hidden="true" class="mbri-left mbr-iconfont"></span>
              </a>
              <a class="carousel-control carousel-control-next" role="button" data-slide="next" href="#carousel-in-store-desktop">
                <span aria-hidden="true" class="mbri-right mbr-iconfont"></span>
              </a>
            </div>
          </div>
        </div>
      {% endif %}
      <a href="{{ path('products', {inStore:true}) }}" class="conceptos-primary-button-gray mt-3">
        <span class="pl-2 pr-2">VER MÁS</span>
      </a>
    </div>
  </div>

  <div class="d-flex flex-column">
      <div class="d-flex conceptos-badge p-2">
      <div class="d-flex align-items-center m-2">
        <span class="conceptos-badge-text">SERVICIOS</span>
      </div>
    </div>
    <div class="d-flex d-lg-none flex-column align-items-center m-3">
      {% if page.data.services.image is defined %}
        <div class="d-flex align-items-center conceptos-white-background p-2">
          <a href="{{ path('services') }}">
            <img class="conceptos-image" src="{{ page.data.services.image.path }}">
          </a>
        </div>
      {% endif %}
      {% if page.data.services.title is defined %}
        <span class="conceptos-title align-self-start mt-3">{{page.data.services.title}}</span>
      {% endif %}
      {% if page.data.services.subtitle is defined %}
        <span class="conceptos-subtitle align-self-start mt-2">{{page.data.services.subtitle}}</span>
      {% endif %}
      <a href="{{ path('services') }}" class="conceptos-primary-button-gray mt-3">
        <span class="pl-2 pr-2">VER MÁS</span>
      </a>
    </div>
    <div class="d-none d-lg-flex flex-column align-items-center ml-5 mr-5 mt-3 mb-3">
      <div class="d-flex col-7">
        {% if page.data.services.image is defined %}
          <div class="d-flex align-items-center conceptos-white-background p-2">
            <img class="conceptos-image" src="{{ page.data.services.image.path }}">
          </div>
        {% endif %}
        <div class="d-flex flex-column ml-3 justify-content-center">
          {% if page.data.services.title is defined %}
            <span class="conceptos-title align-self-start">{{page.data.services.title}}</span>
          {% endif %}
          {% if page.data.services.subtitle is defined %}
            <span class="conceptos-subtitle align-self-start mt-2">{{page.data.services.subtitle}}</span>
          {% endif %}
        </div>
      </div>
      <a href="{{ path('services') }}" class="conceptos-primary-button-gray mt-3">
        <span class="pl-2 pr-2">VER MÁS</span>
      </a>
    </div>
  </div>

  {% if lasts is not empty %}
    <div class="d-flex flex-column">
      <div class="d-flex conceptos-badge p-2">
        <div class="d-flex align-items-center m-2">
          <span class="conceptos-badge-text">INSPIRACIÓN</span>
        </div>
      </div>
      <div class="d-flex flex-wrap m-3 ml-lg-5 mr-lg-5 mt-lg-3 mb-lg-3">
        {% for post in lasts %}
          {% if loop.index <= 2 %}
            <div class="d-flex flex-column col-12 col-lg-6 align-self-center pl-0 pr-3 pb-0">
              <div class="d-flex align-items-center">
                <img class="conceptos-image conceptos-blog-image" src="{{ vich_uploader_asset(post, 'imageFile') }}">
              </div>
              <div class="d-flex flex-column conceptos-white-background p-3">
                <span class="conceptos-title">{{post.title}}</span>
                <span class="conceptos-subtitle conceptos-blog-summary mt-2">{{post.summary}}</span>
                <a href="{{ path('blog_details', {id: post.id, title: post.path}) }}" class="d-flex align-items-center align-self-end home-view-more-link mt-2">
                  LEER MÁS
                  <img class="conceptos-icon ml-2" src="{{ asset('bundles/conceptos/images/home/forward.png') }}">
                </a>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
{% endblock %}
{% block js %}
  <script src="{{ asset('bundles/conceptos/14ndy15/scripts/index.js') }}"></script>
  <script src="{{ asset('bundles/conceptos/home/js/home.js') }}"></script>
{% endblock %}
