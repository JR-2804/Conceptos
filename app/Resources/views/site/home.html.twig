                            <div class="in-store-text align-items-center justify-content-between d-none d-lg-flex">
                                <div class="d-flex flex-column align-items-center">
                                    <span class="d-lg-block">Novedades</span>
                                    <span class="section-subtitle">{{page.data.subtitles.recent|raw}}</span>
                                </div>
                                <a href="{{ path('products', {recent:true}) }}" class="btn btn-success btn-custom d-lg-block">Ver Todos</a>
                            </div>
                            <div class="d-flex mbr-slider slide carousel h-100" id="lasted-carousel"
                                 data-keyboard="false" data-ride="carousel" data-interval="5000">
                                <div class="carousel-inner" role="listbox">
                                    {% if lastedHighlight.highlightImages | length == 0 %}
                                      <div class="carousel-item slider-fullscreen-image active">
                                          <img class="highlight-image" src="{{ asset('bundles/conceptos/images/home/home_002.jpg') }}">
                                      </div>
