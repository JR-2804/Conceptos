{% if product.getSimilarProducts | length > 0 %}

	<div class="similar_products">

		<div class="similar_products__container similar_products__container--hide">

			<div class="similar_products__container__modal">

				<div class="similar_products__container__modal__header">
					<h5>Otras variantes</h5>

					<button class="similar_products__container__modal__header__close"></button>
				</div>

				{% for similarProduct in product.getSimilarProducts %}
					{% set product = similarProduct %}
					{% set sizes = '(min-width: 1000px) 12vw, 50vw' %}

					{{ include('site/components/products/row_product.html.twig') }}

				{% endfor %}
			</div>
		</div>
	</div>

{% endif %}