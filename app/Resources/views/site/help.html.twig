{% extends ':site:base.html.twig' %}
{% block title %}Ayuda{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 pl-0">
                <img class="help-page-header d-none d-lg-block" src="{{ page.data.header.image.path }}">
                <img class="help-page-header-short d-lg-none" src="{{ page.data.header.image.path }}">
            </div>
        </div>
    </div>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-12 mt-3">
                    <span class="decoration-design-description d-none d-lg-block">{{page.data.introduction.text}}</span>
                    <span class="decoration-design-description-short d-lg-none">{{page.data.introduction.text}}</span>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div id="help-accordion" class="mt-2 mt-lg-3" role="tablist" aria-multiselectable="true">
                        {% for faq in page.data.faqs %}
                            <div class="card card-category" role="tab">
                                <div class="card-header card-header-category" id="{{loop.index}}heading">
                                    <h5 class="mb-0">
                                        <a data-toggle="collapse" data-target="#{{loop.index}}" href="javascript:void(0);">
                                            <span class="badge text-right badge-plus">
                                                <i class="mbri-plus"></i>
                                            </span>
                                            <span>{{faq.question|raw}}</span>
                                        </a>
                                    </h5>
                                </div>
                                <div id="{{loop.index}}" class="collapse {% if loop.index == 0 %}show{% endif %}" role="tabpanel">
                                    <div class="card-body card-body-subcategory ac-custom ac-checkmark ml-0">
                                        <span>{{faq.answer|raw}}</span>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
