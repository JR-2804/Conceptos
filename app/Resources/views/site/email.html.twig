<section class="mbr-section form1 cid-qQ6psJr23k mbr-parallax-background pt-lg-5 pt-3" id="form1-c"
         style="background-image: url('{{ home.data.contact.image.path }}')">
    <div class="container">
        <div class="row justify-content-center">
            <div class="title col-12 col-lg-8 pl-3 pr-3">
                <h2 class="mbr-section-title align-center pb-3 mbr-fonts-style display-2 email-notification-background">
                    {{ home.data.contact.main }}
                </h2>
                <h3 class="mbr-section-subtitle align-center mbr-light pb-3 mbr-fonts-style display-5 email-notification-background">
                    {{ home.data.contact.secondary }}
                </h3>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="media-container-column col-lg-8 pl-2" data-form-type="formoid">
                <div data-form-alert="" hidden="">
                    Gracias por contactarnos, pronto nos pondremos en contacto con usted
                </div>
                {{ form_start(form, {'attr': {'data-form-title': 'Conceptos Formulario de Contacto', 'class': 'mbr-form', 'action': path('email_notification')}}) }}
                <div class="d-flex flex-wrap">
                    <div class="col-12 col-lg-4 multi-horizontal pl-0 pl-lg-0" data-for="email_name">
                        <div class="form-group pr-2">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'data-form-field': 'Nombre', 'placeholder': 'Nombre'}}) }}
                        </div>
                    </div>
                    <div class="col-12 col-lg-4 multi-horizontal pl-0 pl-lg-2" data-for="email_email">
                        <div class="form-group pr-2">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'data-form-field':'Correo', 'placeholder': 'Correo'}}) }}
                        </div>
                    </div>
                    <div class="col-12 col-lg-4 multi-horizontal pl-0 pl-lg-2" data-for="email_phone">
                        <div class="form-group pr-2">
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'data-form-field': 'Teléfono', 'placeholder': 'Teléfono'}}) }}
                        </div>
                    </div>
                </div>
                <div class="form-group pr-2" data-for="email_message">
                    {{ form_widget(form.text, {'attr': {'class': 'form-control', 'data-form-field': 'Mensaje', 'rows':'7', 'placeholder': 'Mensaje'}}) }}
                </div>
                <div class="d-flex flex-wrap align-items-center">
                    <div class="col-md-4 multi-horizontal">
                        <div class="ac-custom ac-checkmark">
                            <ul>
                                <li>
                                    <input type="checkbox" id="cb6" name="cb6">
                                    <label class="white-checkbox" for="cb6">Soy Miembro</label>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4 multi-horizontal">
                        <div class="form-group pr-2">
                            {{ form_widget(form.memberNumber, {'attr': {'class': 'form-control', 'placeholder': 'Número de Miembro'}}) }}
                        </div>
                    </div>
                    <div class="col-md-4 multi-horizontal">
                        <div class="form-group">
                            <span class="input-group-btn">
                                <button href="" type="submit" class="btn btn-success btn-form display-4" id="send-mail-button">Enviar</button>
                            </span>
                        </div>
                    </div>
                </div>
                {{ form_widget(form.recaptcha) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
