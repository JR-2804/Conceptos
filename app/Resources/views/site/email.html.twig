<section id="conceptos-contact-form" class="d-flex flex-column">
  <img class="conceptos-image" src="{{home.data.contact.image.path}}">
  {{ form_start(form, {'attr': {'data-form-title': 'Conceptos Formulario de Contacto', 'action': path('email_notification')}}) }}
    <div class="d-flex flex-column p-2">
      <div class="d-flex" data-for="email_name">
        {{ form_widget(form.name, {'attr': {'class': 'conceptos-contact-input w-100', 'data-form-field': 'Nombre', 'placeholder': 'Nombre'}}) }}
      </div>
      <div class="d-flex mt-2" data-for="email_lastName">
        {{ form_widget(form.lastName, {'attr': {'class': 'conceptos-contact-input w-100', 'data-form-field': 'Nombre', 'placeholder': 'Apellidos'}}) }}
      </div>
      <div class="d-flex mt-2" data-for="email_email">
        {{ form_widget(form.email, {'attr': {'class': 'conceptos-contact-input w-100', 'data-form-field':'Correo', 'placeholder': 'Correo'}}) }}
      </div>
      <div class="d-flex mt-2" data-for="email_phone">
        {{ form_widget(form.phone, {'attr': {'class': 'conceptos-contact-input w-100', 'data-form-field': 'Teléfono', 'placeholder': 'Teléfono'}}) }}
      </div>
      <div class="d-flex mt-2" data-for="email_message">
        {{ form_widget(form.text, {'attr': {'class': 'conceptos-contact-input w-100', 'data-form-field': 'Mensaje', 'rows':'7', 'placeholder': 'Mensaje'}}) }}
      </div>
      <div class="d-flex align-items-start mt-2">
        <button id="send-mail-button" class="conceptos-primary-button pl-3 pr-3 pt-0 pb-0" type="submit" href="">Enviar</button>
      </div>
    </div>
  {{ form_end(form) }}
</section>
