</head>
<body>
<input type="hidden" value="{{ path('site_home') }}" id="site-path">
<input type="hidden" value="{{ path('persist_count_shop_car') }}" id="persist-count-path">

<div class="la-anim-10 d-none d-lg-block"></div>
<div class="la-anim-10 small-anim d-lg-none"></div>

<div id="termsAndConditionsModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Términos y Condiciones</h4>
            </div>
            <div class="modal-body">
                {{terms|raw}}
            </div>
            <div class="modal-footer">
                <button class="btn navigation-button" data-dismiss="modal">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<div id="privacyPolicyModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Política de Privacidad</h4>
            </div>
            <div class="modal-body">
                {{privacy|raw}}
            </div>
            <div class="modal-footer">
                <button class="btn navigation-button" data-dismiss="modal">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<div id="cartPreviewModal" class="modal fade">
  <div class="modal-dialog modal-lg mt-0">
    <div class="modal-content">
      <div class="modal-body">
        <div class="shop-cart-product-list-section conceptos-add-scroll">
          <div id="products-summary" class="d-flex flex-column mt-3 ml-3 mr-3">
            {{ render(controller('AppBundle:Site:productsSummary')) }}
          </div>
          <div class="d-flex justify-content-between align-items-center conceptos-badge mt-3">
            <div class="d-flex flex-column m-2">
              <span class="conceptos-badge-text">CANTIDAD</span>
              <span class="conceptos-badge-text shop-cart-products-count">{{count}} {% if count == 1 %}PRODUCTO{% else %}PRODUCTOS{% endif %}</span>
            </div>
            <div class="d-flex flex-column m-2">
              <span class="conceptos-badge-text">PRECIO</span>
              <span class="conceptos-badge-text shop-cart-total-price"></span>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center m-2">
              <a class="conceptos-go-to-cart-icon" href="{{ path('shop-cart') }}">
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<button id="open-categories-menu" class="d-flex justify-content-end p-2">
  <img class="conceptos-icon" src="{{ asset('bundles/conceptos/images/home/forward.png') }}">
</button>

<div id="categories-menu" class="conceptos-add-scroll">
  <div class="d-flex flex-column p-3" role="tablist" aria-multiselectable="false" multiple="false">
    <div class="d-flex align-items-center">
      <img class="conceptos-category-icon mr-2" src="{{ asset('bundles/conceptos/images/home/category-all.png') }}">
      <a class="conceptos-category-title" href="{{ path('products') }}">TODOS</a>
    </div>
    <div class="d-flex align-items-center mt-3">
      <img class="conceptos-category-icon mr-2" src="{{ asset('bundles/conceptos/images/home/category-offers.png') }}">
      <a class="conceptos-category-title" href="{{ path('products') }}">OFERTAS</a>
    </div>
    {% for category in categories %}
      {% if category.parents | length == 0 %}
        {% set subCategories = '' %}
        {% for subCategory in category.subCategories %}
          {% set subCategories = subCategory.id ~ ', '~ subCategories %}
        {% endfor %}
        {% if category.name == "DECORACIÓN" %}
          {% set categoryIcon = asset('bundles/conceptos/images/home/category-decoration.png') %}
        {% elseif category.name == "INFANTIL" %}
          {% set categoryIcon = asset('bundles/conceptos/images/home/category-child.png') %}
        {% elseif category.name == "COCINA" %}
          {% set categoryIcon = asset('bundles/conceptos/images/home/category-kitchen.png') %}
        {% elseif category.name == "LUMINARIAS" %}
          {% set categoryIcon = asset('bundles/conceptos/images/home/category-lights.png') %}
        {% elseif category.name == "BAÑO" %}
          {% set categoryIcon = asset('bundles/conceptos/images/home/category-bathroom.png') %}
        {% elseif category.name == "TEXTILES" %}
          {% set categoryIcon = asset('bundles/conceptos/images/home/category-cloth.png') %}
        {% elseif category.name == "ORDEN Y ALMACENAMIENTO" %}
          {% set categoryIcon = asset('bundles/conceptos/images/home/category-store.png') %}
        {% elseif category.name == "COMEDOR" %}
          {% set categoryIcon = asset('bundles/conceptos/images/home/category-dining-room.png') %}
        {% elseif category.name == "MOBILIARIO" %}
          {% set categoryIcon = asset('bundles/conceptos/images/home/category-furniture.png') %}
        {% elseif category.name == "MASCOTAS" %}
          {% set categoryIcon = asset('bundles/conceptos/images/home/category-pets.png') %}
        {% else %}
          {% set categoryIcon = asset('bundles/conceptos/images/home/category-all.png') %}
        {% endif %}
        <div class="d-flex flex-column conceptos-parent-category mt-3" role="tab">
          <div class="d-flex align-items-center conceptos-category-header collapsed" data-toggle="collapse" data-target="#subcategories-{{loop.index}}">
            <img class="conceptos-category-icon mr-2" src="{{categoryIcon}}">
            <div class="d-flex w-100">
              <span class="conceptos-category-title">{{category.name}}</span>
            </div>
          </div>
          <div id="subcategories-{{loop.index}}" class="conceptos-subcategories-panel collapse" role="tabpanel">
            <div class="d-flex flex-column">
              {% for subCategory in category.subCategories %}
                <div class="d-flex align-items-center mt-3">
                  <img class="conceptos-category-divider-icon ml-3 mr-1" src="{{asset('bundles/conceptos/images/home/category.png')}}">
                  <a class="conceptos-category-subtitle" href="{{ path('products', {categories:subCategory.id}) }}">{{subCategory.name}}</a>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<div id="close-categories-menu">
  <img class="close-categories-menu-icon mr-2 d-flex d-lg-none" src="{{ asset('bundles/conceptos/images/home/close-categories-menu.png') }}">
</div>

{% block header %}
  <section class="menu cid-qQ6pVr9Hx2" once="menu">
    <nav class="navbar navbar-dropdown navbar-fixed-top navbar-toggleable conceptos-navbar">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
              data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
              aria-label="Toggle navigation">
          <div class="hamburger">
              <span></span>
              <span></span>
              <span></span>
              <span></span>
          </div>
      </button>
      <button class="conceptos-navbar-icon" data-toggle="modal" data-target="#cartPreviewModal">
        <div class="d-flex align-items-center">
          <img src="{{ asset('bundles/conceptos/images/home/nav-cart.png') }}">
          <span id="conceptos-shop-cart-count" data-count="{{count}}">{% if count > 99 %}+99{% else %}{{count}}{% endif %}</span>
        </div>
      </button>
      {% if app.user|default %}
      <a class="conceptos-navbar-icon conceptos-user-icon" href="{{ path('site_profile') }}">
        <div class="d-flex align-items-center">
          <img src="{{ asset('bundles/conceptos/images/home/user.png') }}">
        </div>
      </a>
      {% endif %}
      <ul id="conceptos-navbar-links" class="navbar-nav nav-dropdown conceptos-navbar-dropdown d-none d-lg-flex" data-app-modern-menu="true">
        <li><a class="conceptos-navbar-item" href="{{ path('products') }}">PRODUCTOS</a></li>
        <li><a class="conceptos-navbar-item" href="{{ path('services') }}">SERVICIOS</a></li>
        <li><a class="conceptos-navbar-item" href="{{ path('membership') }}">MEMBRESÍA</a></li>
        <li><a class="conceptos-navbar-item" href="{{ path('help') }}">AYUDA</a></li>
        {% if app.user|default %}
          {% if is_granted('ROLE_ADMIN') %}
            <li><a class="conceptos-navbar-item" href="{{ path('easyadmin') }}">ADMINISTRAR</a></li>
          {% endif %}
          <li><a class="conceptos-navbar-item" href="{{ path('fos_user_security_logout') }}">CERRAR SESIÓN</a></li>
        {% else %}
