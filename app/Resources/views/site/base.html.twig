        {% endif %}
      </ul>
      <div class="menu-logo col-6 col-lg-3 pl-0 pl-lg-3">
          <div class="navbar-brand ml-0">
              <span class="navbar-logo">
                  <a href="{{ path('site_home') }}">
                      <img src="{{ home.data.logo.image.path }}" alt="Conceptos"
                            title="Conceptos"
                            style="height: 2.8rem;" class="logo-menu d-none d-lg-flex">
                      <img src="{{ home.data.logo.image.path }}" alt="Conceptos"
                            title="Conceptos"
                            style="width:100%;height: auto !important;" class="logo-menu d-lg-none">
                  </a>
              </span>
          </div>
      </div>
      <div class="d-flex flex-column collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav nav-dropdown conceptos-navbar-dropdown d-flex d-lg-none" data-app-modern-menu="true">
            <li><a class="conceptos-navbar-item" href="{{ path('products') }}">PRODUCTOS</a></li>
            <li><a class="conceptos-navbar-item" href="{{ path('services') }}">SERVICIOS</a></li>
            <li><a class="conceptos-navbar-item" href="{{ path('membership') }}">MEMBRESÍA</a></li>
            <li><a class="conceptos-navbar-item" href="{{ path('help') }}">AYUDA</a></li>
            <li><div class="conceptos-navbar-divider" role="separator"></div></li>
            {% if app.user|default %}
              {% if is_granted('ROLE_ADMIN') %}
                <li><a class="conceptos-navbar-item" href="{{ path('easyadmin') }}">ADMINISTRAR</a></li>
              {% endif %}
              <li><a class="conceptos-navbar-item" href="{{ path('fos_user_security_logout') }}">CERRAR SESIÓN</a></li>
            {% else %}
              <li><a class="conceptos-navbar-item" data-toggle="modal" data-target="#loginModal" href="">ACCEDER</a></li>
            {% endif %}
        </ul>
      </div>
    </nav>
  </section>
{% endblock %}
