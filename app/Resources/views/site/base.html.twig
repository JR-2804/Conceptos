                            <a class="text-white mbr-bold" href="{{ url('help') }}">Ayuda</a>
                        </li>
                        <li class="foot-menu-item mbr-fonts-style display-7">
                            <a class="text-white mbr-bold" data-toggle="modal" data-target="#termsAndConditionsModal" href="">Términos y Condiciones</a>
                        </li>
                        <li class="foot-menu-item mbr-fonts-style display-7">
                            <a class="text-white mbr-bold" data-toggle="modal" data-target="#privacyPolicyModal" href="">Política de Privacidad</a>
                        </li>
                    </ul>
                </div>
                <div class="row align-self-center m-2">
                    <div class="col">
                        {% for network in home.data.social_network.networks %}
                            {% if network.network == 'facebook' %}
                                <a href="{{ network.link }}" target="_blank">
                                    <span class="facebook mx-2" title="Compartir en Facebook">
                                        <i class="socicon socicon-facebook share-icon"></i>
                                    </span>
                                </a>
                            {% elseif network.network == 'twitter' %}
                                <a href="{{ network.link }}" target="_blank">
                                    <span class="twitter mx-2" title="Compartir en Twitter">
                                        <i class="socicon socicon-twitter share-icon"></i>
                                    </span>
                                </a>
                            {% elseif network.network == 'google' %}
                                <a href="{{ network.link }}" target="_blank">
                                    <span class="plusone mx-2" title="Compartir en Google+">
                                        <i class="socicon socicon-googleplus share-icon"></i>
                                    </span>
                                </a>
                            {% elseif network.network == 'pinterest' %}
                                <a href="{{ network.link }}" target="_blank">
                                    <span class="pinterest mx-2" title="Compartir en Pinterest">
                                        <i class="socicon socicon-pinterest share-icon"></i>
                                    </span>
                                </a>
                            {% elseif network.network == 'instagram' %}
                                <a href="{{ network.link }}" target="_blank">
                                    <span class="instagram mx-2" title="Compartir en Instagram">
                                        <i class="socicon socicon-instagram share-icon"></i>
                                    </span>
                                </a>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
                <div class="row row-copirayt">
                    <p class="mbr-text mb-0 mbr-fonts-style mbr-white align-center display-7"></p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
