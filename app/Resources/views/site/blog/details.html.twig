{% extends ':site:base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}
{% block open_graph %}
  <meta property="og:image" content="{{ absolute_url(vich_uploader_asset(post, 'imageFile')) }}">
  <meta property="og:title" content="{{ post.title }}"/>
  <meta property="og:description" content="{{ post.summary }}"/>
  <meta property="og:url" content="{{ url('blog_details', {id: post.id, title: post.path}) }}"/>
  <meta property="og:type" content="website"/>
  <meta property="og:locale" content="es_ES"/>
{% endblock %}
{% block meta_description %}{{ post.summary }}{% endblock %}

{% block meta %}
<link rel="canonical" href="{{ absolute_url(path('blog_details', {id: post.id, title: post.path} )) }}"/>
{% endblock %}


{% block css %}
  <link rel="stylesheet" href="{{ asset('bundles/conceptos/blog/libs/sharetastic/sharetastic.css') }}">
  <link rel="stylesheet" href="{{ asset('bundles/conceptos/blog/css/fontastic.css') }}">
  <link rel="stylesheet" href="{{ asset('bundles/conceptos/libs/@fancyapps/fancybox/jquery.fancybox.min.css') }}">
  <link rel="stylesheet" href="{{ asset('bundles/conceptos/blog/css/style.default.css') }}" id="theme-stylesheet">
  <link rel="stylesheet" href="{{ asset('bundles/conceptos/blog/css/custom.css') }}">
  <link rel="stylesheet" href="{{ asset('bundles/conceptos/14ndy15/styles/blog_v2.css') }}" type="text/css">
{% endblock %}
{% block body %}
  <div class="d-flex flex-column content-post pt-3 pl-2 pr-2 pl-lg-5 pr-lg-5">
    <div class="product_prototype" style="display: none">
      <div id="is_offer" class="d-flex justify-content-center p-2 pb-4 p-lg-3 h-100">
        <div class="d-flex align-items-center conceptos-white-background w-100">
          <a class="h-100 w-100" href="">
            <div class="d-flex flex-column justify-content-between h-100">
              <img class="conceptos-image conceptos-popular-product-image" src="">
              <div class="d-flex justify-content-between align-items-center">
                <span class="conceptos-product-info conceptos-product-price mt-1"></span>
                <button class="conceptos-add-to-cart-icon pr-0" data-path="">
                  <img src="{{ asset('bundles/conceptos/images/home/cart.png') }}">
                </button>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
    <div class="blog_list__title">
      <h2>Inspiraciones</h2>
    </div>
    <div class="d-flex flex-column conceptos-white-background p-2 p-lg-5 mb-2 mb-lg-5">
      <div class="post-single">
        <h1 class="d-none d-lg-block">{{ post.title }}</h1>
        <h2 class="d-lg-none">{{ post.title }}</h2>
        <img src="{{ absolute_url(vich_uploader_asset(post, 'imageFile')) }}" alt="{{ post.title }}" class="conceptos-image mb-2">
        <div class="post-details">
          <div class="d-flex align-items-center flex-column">
            <div class="d-flex justify-content-between w-100">
              <span class="conceptos-blog-info">{{post.createdDate | date('d M | Y')}}</span>
              <div class="d-flex">
                {% if app.user|default %}
                  {% set alreadyLiked = false %}
                  {% for like in post.likes %}
                    {% if like.user.id == app.user.id %}
                      {% set alreadyLiked = true %}
                    {% endif %}
                  {% endfor %}

                  {% if alreadyLiked == false %}
                    <a class="conceptos-blog-info mr-2" href="{{ path('add_like', {id: post.id}) }}">
                      <i class="fa fa fa-thumbs-up"></i> {{post.likes|length}}
                    </a>
                  {% else %}
                    <span class="conceptos-blog-info conceptos-blog-info-active mr-2">
                      <i class="fa fa fa-thumbs-up"></i> {{post.likes|length}}
                    </span>
                  {% endif %}
                {% endif %}
                <span class="conceptos-blog-info">
                  <i class="fa fa-eye"></i> {{post.visitCount}}
                </span>
              </div>
            </div>
            <div class="sharetastic ml-0"></div>
          </div>
          <div class="post-body">
            {{ post.body | raw }}
          </div>
          <div class="post-tags">
            {% for tag in post.tags %}
              <a href="#" class="tag">#{{ tag.value }}</a>
            {% endfor %}
          </div>
          <div class="post-comments">
            <header>
              <span class="conceptos-title mt-3">COMENTARIOS ({{ post.comments | length }})</span>
            </header>
            {% for comment in post.comments %}
              <div class="d-flex flex-column conceptos-gray-background p-2 p-lg-3 mt-2">
                <div class="d-flex justify-content-between align-items-center">
                  <span class="conceptos-title">{{comment.name}}</span>
                  {% if app.user|default and is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('remove_comment', {postId: post.id, commentId: comment.id}) }}">
                      <span class="conceptos-title">
                        <i class="fa fa-trash"></i>
                      </span>
                    </a>
                  {% endif %}
                </div>
                <span class="conceptos-subtitle mt-2">{{comment.text}}</span>
                <span class="align-self-end conceptos-subtitle">{{ comment.date | date('d/m/Y') }}</span>
              </div>
            {% endfor %}
          </div>
          {{ render(controller('AppBundle:Blog:sendComment', {'id': post.id })) }}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
{% block contact %}{% endblock %}
{% block js %}
  <script src="{{ asset('bundles/conceptos/14ndy15/scripts/blog.js') }}"></script>
  <script src="{{ asset('bundles/conceptos/blog/libs/sharetastic/sharetastic.js') }}"></script>
  <script src="{{ asset('bundles/conceptos/assets/popper/popper.min.js') }}"></script>
  <script src="{{ asset('bundles/conceptos/libs/jquery.cookie/jquery.cookie.js') }}"></script>
  <script src="{{ asset('bundles/conceptos/libs/@fancyapps/fancybox/jquery.fancybox.min.js') }}"></script>
  <script src="{{ asset('bundles/conceptos/blog/js/jQuery.print.min.js') }}"></script>
  <script src="{{ asset('bundles/conceptos/blog/js/front.js') }}"></script>
  <script src="{{ asset('bundles/conceptos/blog/js/details.js') }}"></script>
{% endblock %}
