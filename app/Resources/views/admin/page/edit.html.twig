{% extends ':easy_admin:layout.html.twig' %}
{% block content_title %}
    Editar página: <strong>{{ page.name }}</strong>
{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/conceptos/libs/dropzone/dropzone.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('bundles/conceptos/css/edit_page.css') }}" type="text/css" rel="stylesheet">
    {% if page.name | lower == 'home' %}
        <link rel="stylesheet" href="{{ asset('bundles/conceptos/css/page/home.css') }}">
    {% endif %}
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="{{ asset('bundles/conceptos/libs/select2/js/i18n/es.js') }}"></script>
    <script src="{{ asset('bundles/conceptos/libs/dropzone/dropzone.js') }}"></script>
    <script src="{{ asset('bundles/conceptos/js/common.js') }}"></script>
    <script src="{{ asset('bundles/conceptos/js/edit_page.js') }}"></script>
    <script src="{{ asset('bundles/conceptos/libs/vanilla-picker/vanilla-picker.min.js') }}"></script>
    {% if page.name | lower == 'home' %}
        <script src="{{ asset('bundles/conceptos/js/page/home.js') }}"></script>
    {% elseif page.name | lower == 'obras' %}
        <script src="{{ asset('bundles/conceptos/js/page/services.js') }}"></script>
    {% elseif page.name | lower == 'pedido realizado' %}
        <script src="{{ asset('bundles/conceptos/js/page/success-request.js') }}"></script>
    {% elseif page.name | lower == 'app' %}
        <script src="{{ asset('bundles/conceptos/js/page/app.js') }}"></script>
    {% elseif page.name | lower == 'productos' %}
        <script src="{{ asset('bundles/conceptos/js/page/products.js') }}"></script>
    {% elseif page.name | lower == 'interiorismo' %}
        <script src="{{ asset('bundles/conceptos/js/page/inward.js') }}"></script>
    {% elseif page.name | lower == 'pantallas de la aplicación' %}
        <script src="{{ asset('bundles/ivoryckeditor/ckeditor.js') }}"></script>
        <script src="{{ asset('bundles/ivoryckeditor/adapters/jquery.js') }}"></script>
        <script src="{{ asset('bundles/conceptos/js/page/app_screens.js') }}"></script>
    {% elseif page.name | lower == 'sobre nosotros' %}
        <script src="{{ asset('bundles/conceptos/js/page/about-us.js') }}"></script>
    {% elseif page.name | lower == 'membresia' %}
      <script src="{{ asset('bundles/conceptos/js/page/membership.js') }}"></script>
    {% elseif page.name | lower == 'ayuda' %}
      <script src="{{ asset('bundles/conceptos/js/page/help.js') }}"></script>
    {% endif %}
{% endblock %}

{% block main %}
    <input type="hidden" class="remove-path-image" value="{{ path('remove_image_site') }}">
    <div class="container-fluid">
        {% if page.name | lower == 'home' %}
            {{ include(':admin/page:home.html.twig') }}
        {% elseif page.name | lower == 'obras' %}
            {{ include(':admin/page:services.html.twig') }}
        {% elseif page.name | lower == 'app' %}
            {{ include(':admin/page:app.html.twig') }}
        {% elseif page.name | lower == 'pedido realizado' %}
            {{ include(':admin/page:success-request.html.twig') }}
        {% elseif page.name | lower == 'productos' %}
            {{ include(':admin/page:products.html.twig') }}
        {% elseif page.name | lower == 'pantallas de la aplicación' %}
            {{ include(':admin/page:app_screens.html.twig') }}
        {% elseif page.name | lower == 'interiorismo' %}
            {{ include(':admin/page:inward.html.twig') }}
        {% elseif page.name | lower == 'sobre nosotros' %}
            {{ include(':admin/page:about-us.html.twig') }}
        {% elseif page.name | lower == 'membresia' %}
            {{ include(':admin/page:membership.html.twig') }}
        {% elseif page.name | lower == 'ayuda' %}
            {{ include(':admin/page:help.html.twig') }}
        {% endif %}
        <div class="row">
            <div class="col-12">
                {{ form_start(form) }}
                <button class="btn btn-primary pull-left" type="submit" id="save_data">
                    <i class="fa fa-plus"></i>
                    Aceptar
                </button>
                <a class="btn btn-secondary action-list pull-left"
                   href="{{ path('easyadmin', {'entity': 'Page', 'action': 'list', 'menuIndex': 6, 'submenuIndex': -1}) }}">
                    Cancelar
                </a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <div id="preview-template" style="display: none;">
