<div class="row">
    <div class="col-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Encabezado</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-12">
                        <div class="center-block">
                            <form class="dropzone" id="picture-dropzone-about-us-header"
                                  action="{{ path('upload_site_image') }}">
                                <div class="dz-message needsclick colp" style="font-size: 25px;">
                                    Seleccione una imágen
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Breve Descripción</h3>
            </div>
            <div class="panel-body">
                <div class="center-block">
                    <form class="dropzone" id="picture-dropzone-short-description-image"
                          action="{{ path('upload_site_image') }}">
                        <div class="dz-message needsclick colp" style="font-size: 25px;">
                            Seleccione una imágen
                        </div>
                    </form>
                </div>
                <div class="form-group">
                    <label class="control-label">Título</label>
                    <input type="text" class="form-control" id="short-description-title">
                </div>
                <div class="form-group">
                    <label class="control-label">Descripción</label>
                    <textarea class="form-control" rows="3" id="short-description-text"></textarea>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Miembros</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label class="control-label">Título</label>
                            <input type="text" class="form-control" id="members-title">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="panel panel-primary">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label class="control-label">Nombre</label>
                                            <input type="text" class="form-control" id="member-name">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label class="control-label">Función</label>
                                            <input type="text" class="form-control" id="member-rol">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label class="control-label">Descripción</label>
                                            <textarea class="form-control" rows="3" id="member-description"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <form class="dropzone" id="picture-dropzone-member-image"
                                              action="{{ path('upload_site_image') }}">
                                            <div class="dz-message needsclick colp" style="font-size: 25px;">
                                                Seleccione una imágen
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <button class="btn btn-primary pull-right btn-add-member"
                                                data-edit="false">Añadir
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered table-striped table-condensed">
                                <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Función</th>
                                    <th>Descripción</th>
                                    <th>Foto</th>
                                </tr>
                                </thead>
                                <tbody class="table-members">
                                <tr>
                                    <td>%1</td>
                                    <td>%2</td>
                                    <td>%3</td>
                                    <td><img src="%4" class="img-responsive"></td>
                                    <td>
                                        <a class="btn btn-secondary btn-remove-member" data-index="%6">
                                            <i class="fa fa-remove"></i>
                                        </a>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Parte Inferior</h3>
            </div>
            <div class="panel-body">
                <div class="center-block">
                    <form class="dropzone" id="picture-dropzone-footer-image"
                          action="{{ path('upload_site_image') }}">
                        <div class="dz-message needsclick colp" style="font-size: 25px;">
                            Seleccione una imágen
                        </div>
                    </form>
                </div>
                <div class="form-group">
                    <label class="control-label">Texto</label>
                    <input type="text" class="form-control" id="footer-text">
                </div>
            </div>
        </div>
    </div>
</div>
