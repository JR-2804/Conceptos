<div class="row">
    <div class="col-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Encabezado</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-12">
                        <div class="center-block">
                            <form class="dropzone" id="picture-dropzone-services-header"
                                  action="{{ path('upload_site_image') }}">
                                <div class="dz-message needsclick colp" style="font-size: 25px;">
                                    Seleccione una imágen
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Proyectos de diseño arquitectónico</h3>
            </div>
            <div class="panel-body">
                <div class="center-block">
                    <form class="dropzone" id="picture-dropzone-arq"
                          action="{{ path('upload_site_image') }}">
                        <div class="dz-message needsclick colp" style="font-size: 25px;">
                            Seleccione una imágen
                        </div>
                    </form>
                </div>
                <div class="form-group">
                    <label class="control-label">Título</label>
                    <input type="text" class="form-control" id="arg-title">
                </div>
                <div class="form-group">
                    <label class="control-label">Descripción</label>
                    <textarea class="form-control" rows="3" id="arg-description"></textarea>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Inspiración</h3>
            </div>
            <div class="panel-body">
                <div class="center-block">
                    <form class="dropzone" id="picture-dropzone-inspiration-image"
                          action="{{ path('upload_site_image') }}">
                        <div class="dz-message needsclick colp" style="font-size: 25px;">
                            Seleccione una imágen
                        </div>
                    </form>
                </div>
                <div class="form-group">
                    <label class="control-label">Texto</label>
