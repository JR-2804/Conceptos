<div class="details">
    <div class="details__name">
        <h2>{{ product.name }}</h2>
    </div>
    <div class="details__description">
        <p>{{ product.item }}</p>
    </div>
    <div class="details__recent">
        <span>Nuevo</span>
    </div>
    <div class="details__delivery in-store">
        <span>Entrega en 24H</span>
    </div>
    <div class="details__members_discount">
        <p>Oferta para miembros: -20%</p>
    </div>
    <div class="details__price">
        <span>${{ product.calculatePrice }}.00</span>
    </div>


</div>

<div class="description">
    <div class="description__title">
        <h3>Detalles del producto</h3>
    </div>
    <div class="description__code">
        <p><span>Codigo:</span> {{ product.code }}</p>
    </div>
    <div class="description__color">
        <p><span>Color:</span> {{ product.color }}</p>
    </div>
    <div class="description__material">
        <p><span>Material:</span> {{ product.material }}</p>
    </div>
    <div class="description__text">
        <p>{{ product.description }}</p>
    </div>
</div>